{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "state": {
            "type": "string",
            "value": null,
            "comment": "Conversation state identifier (e.g. current dialog state)"
        },
        "intent": {
            "type": "string",
            "value": null,
            "comment": "Detected user intent name"
        },
        "input": {
            "type": "string",
            "value": null,
            "comment": "User input text"
        },
        "session": {
            "type": "string",
            "value": null,
            "comment": "Session identifier for the conversation"
        },
        "lang": {
            "type": "string",
            "value": "de",
            "comment": "Language code for the conversation (default: 'de')"
        },
        "repeat": {
            "type": "boolean",
            "value": null,
            "comment": "Indicator if the input is a repeat of the previous input after 202 code"
        },
        "sequence": {
            "type": "number",
            "value": null,
            "comment": "Sequence number within the session or conversation"
        },
        "origin": {
            "type": "string",
            "value": null,
            "comment": "Originating state to route back, if required."
        },
        "type": {
            "type": "string",
            "value": null,
            "comment": "Specifier for type (e.g. tier)"
        },
        "entity": {
            "type": "string",
            "value": null,
            "comment": "Specifier for specific species (e.g wasserfrosch)"
        },
        "key": {
            "type": "string",
            "value": null,
            "comment": "Specifier for specific key of entity (e.g habitat)"
        },
        "output": {
            "type": "string",
            "value": null,
            "comment": "Output text or message to be conveyed to the user"
        },
        "options": {
            "type": "array",
            "items": {},
            "comment": "Optional list of selectable options or suggestions"
        },
        "labels": {
            "type": "array",
            "items": {},
            "comment": "Optional list of labels or tags associated with the options. Same order as options"
        },
        "values": {
            "type": "array",
            "items": {},
            "comment": "Optional list of values. Same order as options"
        }
    },
    "required": [
        "input",
        "lang",
        "repeat",
        "session",
        "sequence"
    ]
}
